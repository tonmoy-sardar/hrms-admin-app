<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:elevation="@dimen/_3sdp"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/_3sdp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="02.02.2019">

            </com.sft.hrmsadmin.widget.GothiciRegularTextView>

            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                    android:id="@+id/tvConveyance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rounded_corner_button"
                    android:padding="@dimen/_5sdp"
                    android:text="Conveyance"
                    android:textColor="@color/color_white">

            </com.sft.hrmsadmin.widget.GothiciRegularTextView>

        </RelativeLayout>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                    android:id="@+id/tvLoginTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="Log In: 10:00 am">

            </com.sft.hrmsadmin.widget.GothiciRegularTextView>

            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                    android:id="@+id/tvLogoutTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/_5sdp"
                    android:text="Log Out: 06:00 pm">

            </com.sft.hrmsadmin.widget.GothiciRegularTextView>

        </RelativeLayout>


        <com.sft.hrmsadmin.widget.GothiciRegularTextView
                android:id="@+id/tvGrace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Grace: ">

        </com.sft.hrmsadmin.widget.GothiciRegularTextView>

        <LinearLayout
                android:id="@+id/llLeaveDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                    android:id="@+id/tvLeaveDetaillabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="Leave Details">


            </com.sft.hrmsadmin.widget.GothiciRegularTextView>

            <ImageView
                    android:id="@+id/ivArrowDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:visibility="visible" />

            <ImageView
                    android:id="@+id/ivArrowup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow_drop_up_black_24dp"
                    android:visibility="gone" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLeaveType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_border_solid_white"
                android:visibility="gone" />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">


            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <com.sft.hrmsadmin.widget.GothiciRegularTextView
                        android:id="@+id/tvCL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_5sdp"
                        android:text="CL: 0" />

            </RelativeLayout>


            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <com.sft.hrmsadmin.widget.GothiciRegularTextView
                        android:id="@+id/tvEL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_5sdp"
                        android:text="EL: 0" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <com.sft.hrmsadmin.widget.GothiciRegularTextView
                        android:id="@+id/tvSL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="SL: 0">

                </com.sft.hrmsadmin.widget.GothiciRegularTextView>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <com.sft.hrmsadmin.widget.GothiciRegularTextView
                        android:id="@+id/tvAbsent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_5sdp"
                        android:text="Absent: 0">

                </com.sft.hrmsadmin.widget.GothiciRegularTextView>

            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                    android:id="@+id/tvRemarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="">

            </com.sft.hrmsadmin.widget.GothiciRegularTextView>


        </RelativeLayout>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/border_color" />

</LinearLayout>