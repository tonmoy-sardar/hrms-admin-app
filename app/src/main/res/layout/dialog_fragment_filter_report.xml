<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.sft.hrmsadmin.widget.GothiciBoldTextView
            android:id="@+id/tv_establishment_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@mipmap/hedder_bg_new"
            android:gravity="center"
            android:text="Filter Report"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_16sdp" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginRight="15dp"
                    android:text="Department : "
                    android:textColor="@color/text_color"
                    android:textSize="18dp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_filter_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:overScrollMode="never"
                    />


                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginRight="15dp"
                    android:text="Designation : "
                    android:textColor="@color/text_color"
                    android:textSize="18dp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:overScrollMode="never"
                    android:id="@+id/rv_filter_designation"
                    />




                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginRight="15dp"
                    android:text="Leave Type : "
                    android:textColor="@color/text_color"
                    android:textSize="18dp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_filter_leave_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:overScrollMode="never"
                    />


                <Button
                    android:id="@+id/tv_submit"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/rectangle_box_curve_solid"
                    android:gravity="center"
                    android:text="apply"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_14sdp"
                    android:layout_gravity="center_horizontal"
                    android:elevation="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    />


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>


    <ImageView
        android:id="@+id/iv_df_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:src="@drawable/ic_back_butt" />


</RelativeLayout>