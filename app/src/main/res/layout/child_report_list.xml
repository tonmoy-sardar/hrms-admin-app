<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_15sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />


            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                android:id="@+id/tv_vendor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jhon deo"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            >

            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : "
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />


            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                android:id="@+id/tv_payment_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="11.08.2019"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log In : "
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />


                <com.sft.hrmsadmin.widget.GothiciRegularTextView
                    android:id="@+id/tv_qvl_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="11.00 AM"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out : "
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />


                <com.sft.hrmsadmin.widget.GothiciRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2.00 PM"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deviation Time : "
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />


            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30 min"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave Type : "
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />


            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Full day leave"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Justification : "
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />


            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Family emergency"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approval : "
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />


            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pending Approval"
                android:textColor="@color/color_approval_status"
                android:textSize="@dimen/_12sdp"
                />



        </LinearLayout>


        <com.sft.hrmsadmin.widget.GothiciBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_26sdp"
            android:textColor="@color/color_white"
            android:background="@drawable/rectangle_box_curve_solid"
            android:text="Conveyance Applied"
            android:gravity="center"
            android:id="@+id/tv_conveyance_details"
            android:layout_marginTop="@dimen/_10sdp"
            />









    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_black"
        />

</LinearLayout>