<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/colorWhite"
            card_view:cardCornerRadius="6dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:id="@+id/tv_header_lea"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@mipmap/hedder_bg_new"
                    android:gravity="center"
                    android:text="HRMS Admin"
                    android:textColor="@color/color_white"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:id="@+id/tv_dialogMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Do you want to exit ?"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_13sdp" />


            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:id="@+id/bt_dialogOK"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@mipmap/submit_button"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="OK"
                    android:textColor="@color/color_white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>
