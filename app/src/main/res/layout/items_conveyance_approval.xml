<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardBackgroundColor="@color/color_white"
        android:id="@+id/cv_total">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_264sdp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingRight="@dimen/_10sdp"
                >


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name : "
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


                <com.sft.hrmsadmin.widget.GothiciRegularTextView
                        android:id="@+id/tv_employee_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jhon deo"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_alignParentRight="true"
                        android:text="Details"
                        android:textColor="@color/color_white"
                        android:background="@mipmap/submit_button"
                        android:gravity="center"
                        android:id="@+id/tv_details"
                        />


            </LinearLayout>



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                >

            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date : "
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp"
                    />


            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                    android:id="@+id/tv_request_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="11.08.2019"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />


        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From : "
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />


            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                    android:id="@+id/tvFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="11.00 AM"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />


        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To : "
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />


            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                    android:id="@+id/tvTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2.00 PM"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />


        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                >

            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eligibility : "
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />

            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                    android:id="@+id/tvEligibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp"
                    android:text="122"
                    />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                >

            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount : "
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />

            <com.sft.hrmsadmin.widget.GothiciRegularTextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp"
                    android:text="INR 111"
                    />

        </LinearLayout>



        <com.sft.hrmsadmin.widget.GothiciBoldTextView
                android:id="@+id/tv_conveyance_details"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rectangle_box_curve_solid"
                android:gravity="center"
                android:text="Conveyance Applied"
                android:textColor="@color/color_white"
                android:visibility="gone" />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="vertical">

            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approval : "
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />


            <RadioGroup
                    android:id="@+id/rg_approve_reject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                <com.sft.hrmsadmin.widget.GothiciRegularRadioButton
                        android:id="@+id/rb_approve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Approve"
                        android:textColor="@color/color_green_approve"
                        android:textSize="@dimen/_12sdp" />

                <com.sft.hrmsadmin.widget.GothiciRegularRadioButton
                        android:id="@+id/rb_reject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reject"
                        android:textColor="@color/red_color"
                        android:textSize="@dimen/_12sdp" />

                <com.sft.hrmsadmin.widget.GothiciRegularRadioButton
                        android:id="@+id/rb_modify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Modify"
                        android:textColor="@color/drawer_background"
                        android:textSize="@dimen/_12sdp" />

            </RadioGroup>


            <com.sft.hrmsadmin.widget.GothiciRegularEditText
                    android:id="@+id/et_modified_amount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_box_black_outline"
                    android:gravity="center_vertical"
                    android:hint="Modified Amount..."
                    android:imeOptions="actionDone"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_11sdp"
                    android:inputType="number"
                    android:visibility="invisible"
                    />


            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:id="@+id/tv_approval_submit"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@mipmap/submit_button"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="@color/color_white" />


        </LinearLayout>


    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_264sdp"
            android:background="@color/tranparent_selection"
            android:id="@+id/v_selection"
            android:visibility="gone"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>