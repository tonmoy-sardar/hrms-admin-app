<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardBackgroundColor="@color/color_white"
        android:id="@+id/cv_total">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_334sdp">


        <com.sft.hrmsadmin.widget.GothiciBoldTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:background="@mipmap/hd_title"
                android:id="@+id/tv_al_date"
                android:textColor="@color/color_white"
                android:text="oct 22,2020"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_below="@+id/tv_al_date"
                >


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name : "
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


                <com.sft.hrmsadmin.widget.GothiciRegularTextView
                        android:id="@+id/tv_employee_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jhon deo"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >

                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date : "
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


                <com.sft.hrmsadmin.widget.GothiciRegularTextView
                        android:id="@+id/tv_request_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="11.08.2019"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deviation Start : "
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


                <com.sft.hrmsadmin.widget.GothiciRegularTextView
                        android:id="@+id/tv_deviation_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="11.00 AM"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deviation End : "
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


                <com.sft.hrmsadmin.widget.GothiciRegularTextView
                        android:id="@+id/tv_deviation_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2.00 PM"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deviation Time : "
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


                <com.sft.hrmsadmin.widget.GothiciRegularTextView
                        android:id="@+id/tv_deviation_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="30 min"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leave Type : "
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


                <com.sft.hrmsadmin.widget.GothiciRegularTextView
                        android:id="@+id/tv_leave_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Full day leave"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Justification : "
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


                <com.sft.hrmsadmin.widget.GothiciRegularTextView
                        android:id="@+id/tv_approval_justification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Family emergency"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


            </LinearLayout>


            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:id="@+id/tv_conveyance_details"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rectangle_box_curve_solid"
                    android:gravity="center"
                    android:text="Conveyance Applied"
                    android:textColor="@color/color_white"
                    android:visibility="gone" />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approval : "
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


                <RadioGroup
                        android:id="@+id/rg_approve_reject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                    <com.sft.hrmsadmin.widget.GothiciRegularRadioButton
                            android:id="@+id/rb_approve"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Approve"
                            android:textColor="@color/color_green_approve"
                            android:textSize="@dimen/_12sdp" />

                    <com.sft.hrmsadmin.widget.GothiciRegularRadioButton
                            android:id="@+id/rb_reject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Reject"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/red_color"
                            />


                    <com.sft.hrmsadmin.widget.GothiciRegularRadioButton
                            android:id="@+id/rb_free"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Free"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/drawer_background"
                            />

                </RadioGroup>


                <com.sft.hrmsadmin.widget.GothiciRegularEditText
                        android:id="@+id/et_add_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_box_black_outline"
                        android:gravity="start"
                        android:hint="Add Remarks..."
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:padding="@dimen/_7sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp" />


                <com.sft.hrmsadmin.widget.GothiciBoldTextView
                        android:id="@+id/tv_approval_submit"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@mipmap/submit_button"
                        android:gravity="center"
                        android:text="Submit"
                        android:textColor="@color/color_white" />


            </LinearLayout>


        </LinearLayout>


        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_334sdp"
                android:background="@color/tranparent_selection"
                android:id="@+id/v_selection"
                android:visibility="gone"
                />


    </RelativeLayout>

</androidx.cardview.widget.CardView>