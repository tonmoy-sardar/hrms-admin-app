<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        tools:context=".activity.DashboardActivity">

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_attendance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_106sdp"
            android:layout_margin="@dimen/_15sdp"
            app:cardBackgroundColor="@color/color_white"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_10sdp"
            >

        <LinearLayout
                android:id="@+id/ll_attendance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


            <ImageView
                    android:id="@+id/iv_item"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/ic_teamattendance" />


            <com.sft.hrmsadmin.widget.GothiciBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center"
                    android:text="Team Attendance Report &amp; Approval"
                    android:textSize="@dimen/_12sdp"
                    app:textAllCaps="true" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/ll_app_closed_msg"
            android:visibility="gone"
            >


        <com.sft.hrmsadmin.widget.GothiciBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The App is currently closed."
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/red_color"
                />


        <com.sft.hrmsadmin.widget.GothiciRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We are processing your salary!"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/color_black"
                />


    </LinearLayout>



</RelativeLayout>